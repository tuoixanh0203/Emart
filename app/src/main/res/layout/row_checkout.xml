<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/product_des_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="25dp"
        android:text="Tên"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/product_name_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="183dp"
        android:text="Des" />

    <TextView
        android:id="@+id/product_price_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_name_checkout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="246dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="-68dp"
        android:text="Giá tiền"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/product_quantity_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_checkout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="289dp"
        android:text="Số lượng"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/product_image_checkout"
        android:layout_width="146dp"
        android:layout_height="118dp"
        android:layout_above="@+id/product_quantity_checkout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="-27dp"
        android:layout_toStartOf="@+id/product_name_checkout"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>