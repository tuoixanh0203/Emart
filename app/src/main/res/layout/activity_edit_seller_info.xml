<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EditSellerInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/linear_ll"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_back"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sửa thông tin shop"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textColor="@color/textHeading"
            android:layout_alignParentRight="true"
            android:textStyle="normal"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/textHeading"
        android:layout_below="@+id/linear_ll"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="100dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Tên Shop"
        android:id="@+id/shop_name_update"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/blur"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Điện thoại"
        android:id="@+id/shop_phone_update"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/blur"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Email"
        android:id="@+id/shop_email_update"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/blur"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Địa chỉ"
        android:id="@+id/shop_address_update"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/blur"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/update_profile"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/bg_btn"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Lưu"
            android:textColor="@color/textHeading"
            android:textSize="18dp"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>