<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeedbackAcitivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="337dp"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="261dp"
      android:fontFamily="@font/amethysta"
      android:text="Đánh giá sản phẩm"
      android:textColor="@color/black"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/feedback"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.024" />

  <TextView
      android:id="@+id/product_img_fb"
      android:layout_width="106dp"
      android:layout_height="68dp"
      android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
      android:text="Ảnh sản phẩm"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.121"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.167" />

  <TextView
      android:id="@+id/product_name_fb"
      android:layout_width="121dp"
      android:layout_height="67dp"
      android:text="Tên sản phẩm"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.565"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textView"
      app:layout_constraintVertical_bias="0.148" />

  <Button
      android:id="@+id/button_add_img_fb"
      android:layout_width="139dp"
      android:layout_height="89dp"
      android:drawableLeft="@android:drawable/ic_menu_camera"
      android:text="Thêm ảnh"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.143"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.312" />

  <Button
      android:id="@+id/button_add_video_fb"
      android:layout_width="130dp"
      android:layout_height="84dp"
      android:drawableLeft="@android:drawable/presence_video_away"
      android:text="Thêm video"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.868"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.316" />

  <Button
      android:id="@+id/button_fb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="17dp"
      android:text="Đánh giá"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="1.0" />


  <Switch
      android:id="@+id/anonymous_fb"
      android:layout_width="254dp"
      android:layout_height="58dp"
      android:layout_marginBottom="98dp"
      android:text="Đánh giá ẩn danh"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="1.0" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/feedback"
      android:layout_width="398dp"
      android:layout_height="140dp"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="6dp"
      android:layout_marginBottom="244dp"
      android:hint="Hãy chia sẻ những điều bạn thích về sản phẩm này"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      tools:ignore="MissingConstraints">

  </com.google.android.material.textfield.TextInputEditText>

  <RatingBar
      android:id="@+id/rating_product_fb"
      style="?android:attr/ratingBarStyleSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:isIndicator="true"
      android:numStars="5"
      android:stepSize="0.1"
      android:rating="5"
      android:backgroundTintMode="@color/purple_500"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="152dp"
      tools:layout_editor_absoluteY="506dp" />
</androidx.constraintlayout.widget.ConstraintLayout>